<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/projects">Projects</a></li>
                <li class="breadcrumb-item active"><%= project.name %></li>
            </ol>
        </nav>
        <h2 class="mb-1">
            <i class="fas fa-project-diagram me-2 text-primary"></i><%= project.name %>
        </h2>
        <% if (project.description) { %>
            <p class="text-muted mb-0"><%= project.description %></p>
        <% } %>
    </div>
    <div>
        <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#createTaskModal">
            <i class="fas fa-plus me-2"></i>Add Task
        </button>
    </div>
</div>

<!-- Project Overview -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <i class="fas fa-tasks fa-2x text-primary mb-2"></i>
                <%
                    const tasks = project.tasks || [];
                    const totalTasksCount = tasks.length;
                %>
                <h4><%= totalTasksCount %></h4>
                <p class="text-muted mb-0">Total Tasks</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                <%
                    const completedCount = tasks.filter(t => t.status === 'COMPLETED').length;
                %>
                <h4><%= completedCount %></h4>
                <p class="text-muted mb-0">Completed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <i class="fas fa-spinner fa-2x text-warning mb-2"></i>
                <%
                    const inProgressCount = tasks.filter(t => t.status === 'IN_PROGRESS').length;
                %>
                <h4><%= inProgressCount %></h4>
                <p class="text-muted mb-0">In Progress</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-2x text-info mb-2"></i>
                <%
                    const pendingCount = tasks.filter(t => t.status === 'PENDING').length;
                %>
                <h4><%= pendingCount %></h4>
                <p class="text-muted mb-0">Pending</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Tasks Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list-check me-2"></i>Project Tasks
                </h5>
                <span class="badge bg-primary"><%= tasks.length %> tasks</span>
            </div>
            <div class="card-body">
                <% if (tasks.length > 0) { %>
                    <div class="list-group list-group-flush">
                        <% tasks.forEach(task => { 
                            const isOverdue = task.dueDate && new Date(task.dueDate) < new Date() && task.status !== 'COMPLETED';
                            const taskClass = isOverdue ? 'overdue' : task.status.toLowerCase().replace('_', '-');
                        %>
                            <div class="list-group-item px-0 py-3 task-card <%= taskClass %>">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-1 <%= task.status === 'COMPLETED' ? 'text-decoration-line-through text-muted' : '' %>">
                                                <%= task.title %>
                                                <% if (isOverdue) { %>
                                                    <span class="badge bg-danger ms-2">Overdue</span>
                                                <% } %>
                                            </h6>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editTaskModal<%= task.id %>">
                                                            <i class="fas fa-edit me-2"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST" class="d-inline">
                                                            <button type="submit" class="dropdown-item text-danger" onclick="return confirmDelete()">
                                                                <i class="fas fa-trash me-2"></i>Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        
                                        <% if (task.description) { %>
                                            <p class="text-muted mb-2 small"><%= task.description %></p>
                                        <% } %>
                                        
                                        <div class="d-flex flex-wrap gap-3 align-items-center">
                                            <span class="badge bg-<%= 
                                                task.priority === 'URGENT' ? 'danger' : 
                                                task.priority === 'HIGH' ? 'warning' : 
                                                task.priority === 'MEDIUM' ? 'info' : 
                                                'secondary' 
                                            %>">
                                                <i class="fas fa-flag me-1"></i><%= task.priority %>
                                            </span>
                                            
                                            <span class="badge bg-<%= 
                                                task.status === 'COMPLETED' ? 'success' : 
                                                task.status === 'IN_PROGRESS' ? 'primary' : 
                                                'secondary' 
                                            %>">
                                                <%= task.status %>
                                            </span>
                                            
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Due: 
                                                <% if (task.dueDate) { %>
                                                    <%= new Date(task.dueDate).toLocaleDateString() %>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </small>
                                            
                                            <% if (task.assignee) { %>
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>
                                                    <%= task.assignee.name %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Edit Task Modal -->
                            <div class="modal fade" id="editTaskModal<%= task.id %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form action="/tasks/<%= task.id %>?_method=PUT" method="POST">
                                            <input type="hidden" name="projectId" value="<%= project.id %>">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Edit Task</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="title<%= task.id %>" class="form-label">Title</label>
                                                    <input type="text" class="form-control" id="title<%= task.id %>" name="title" value="<%= task.title %>" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="description<%= task.id %>" class="form-label">Description</label>
                                                    <textarea class="form-control" id="description<%= task.id %>" name="description" rows="3"><%= task.description %></textarea>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="dueDate<%= task.id %>" class="form-label">Due Date</label>
                                                        <input type="date" class="form-control" id="dueDate<%= task.id %>" name="dueDate" 
                                                            <% if (task.dueDate) { %>
                                                                value="<%= new Date(task.dueDate).toISOString().split('T')[0] %>"
                                                            <% } %>
                                                            required>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="priority<%= task.id %>" class="form-label">Priority</label>
                                                        <select class="form-control" id="priority<%= task.id %>" name="priority">
                                                            <option value="LOW" <%= task.priority === 'LOW' ? 'selected' : '' %>>Low</option>
                                                            <option value="MEDIUM" <%= task.priority === 'MEDIUM' ? 'selected' : '' %>>Medium</option>
                                                            <option value="HIGH" <%= task.priority === 'HIGH' ? 'selected' : '' %>>High</option>
                                                            <option value="URGENT" <%= task.priority === 'URGENT' ? 'selected' : '' %>>Urgent</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="status<%= task.id %>" class="form-label">Status</label>
                                                        <select class="form-control" id="status<%= task.id %>" name="status">
                                                            <option value="PENDING" <%= task.status === 'PENDING' ? 'selected' : '' %>>Pending</option>
                                                            <option value="IN_PROGRESS" <%= task.status === 'IN_PROGRESS' ? 'selected' : '' %>>In Progress</option>
                                                            <option value="COMPLETED" <%= task.status === 'COMPLETED' ? 'selected' : '' %>>Completed</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="assigneeId<%= task.id %>" class="form-label">Assignee</label>
                                                        <select class="form-control" id="assigneeId<%= task.id %>" name="assigneeId">
                                                            <option value="">Unassigned</option>
                                                            <% users.forEach(user => { %>
                                                                <option value="<%= user.id %>" <%= task.assigneeId === user.id ? 'selected' : '' %>><%= user.name %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-primary">Update Task</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Tasks Yet</h5>
                        <p class="text-muted">Add your first task to get started</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                            <i class="fas fa-plus me-2"></i>Add First Task
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Project Info Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Project Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Timeline:</strong><br>
                    <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        <%= new Date(project.startDate).toLocaleDateString() %> - <%= new Date(project.endDate).toLocaleDateString() %>
                    </small>
                </div>
                <div class="mb-3">
                    <strong>Created:</strong><br>
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        <%= new Date(project.createdAt).toLocaleDateString() %>
                    </small>
                </div>
                <div class="mb-3">
                    <strong>Progress:</strong>
                    <div class="progress mt-1">
                        <% 
                            const completedTasks = tasks.filter(t => t.status === 'COMPLETED').length;
                            const totalTasks = tasks.length;
                            const progress = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;
                        %>
                        <div 
                            class="progress-bar bg-success" 
                            role="progressbar" 
                            <% /* eslint-disable css-propertyvalueexpected */ %> 
                            style="width: <%= progress %>%" 
                            aria-valuenow="<%= progress %>"
                            aria-valuemin="0" 
                            aria-valuemax="100">
                            <%= progress %>%
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/projects/<%= project.id %>/edit" class="btn btn-outline-warning">
                        <i class="fas fa-edit me-2"></i>Edit Project Details
                    </a>
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                        <i class="fas fa-plus me-2"></i>Add New Task
                    </button>
                    <a href="/tasks" class="btn btn-outline-secondary">
                        <i class="fas fa-tasks me-2"></i>View All Tasks
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Task Modal -->
<div class="modal fade" id="createTaskModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/tasks" method="POST">
                <input type="hidden" name="projectId" value="<%= project.id %>">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="title" class="form-label">Task Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter task title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Task description"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="dueDate" class="form-label">Due Date</label>
                            <input type="date" class="form-control" id="dueDate" name="dueDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="priority" class="form-label">Priority</label>
                            <select class="form-control" id="priority" name="priority">
                                <option value="LOW">Low</option>
                                <option value="MEDIUM" selected>Medium</option>
                                <option value="HIGH">High</option>
                                <option value="URGENT">Urgent</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="assigneeId" class="form-label">Assignee</label>
                        <select class="form-control" id="assigneeId" name="assigneeId">
                            <option value="">Unassigned</option>
                            <% users.forEach(user => { %>
                                <option value="<%= user.id %>"><%= user.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Task</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Set default due date to 3 days from now
    const dueDate = new Date();
    dueDate.setDate(dueDate.getDate() + 3);
    document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];
});
</script>